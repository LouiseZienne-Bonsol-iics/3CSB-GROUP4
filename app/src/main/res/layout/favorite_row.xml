<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="420dp"
        android:layout_height="wrap_content"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/HomeGrey"
            android:gravity="center">

            <TextView
                android:id="@+id/favoriteText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"


                android:padding="16dp"
                android:text="Content"
                android:textColor="@color/Dark"
                android:textSize="24dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="6dp"
                android:id="@+id/favorites">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/favImageTL"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/ic_launcher_background" />

                    <ImageView
                        android:id="@+id/favoriteImage"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="-15dp"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/ic_launcher_background" />

                    <ImageView
                        android:id="@+id/favImageTR"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="-15dp"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/ic_launcher_background" />

                    <ImageView
                        android:id="@+id/favImageT"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="-15dp"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/ic_launcher_background" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="6dp"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/favImageBL"
                        android:src="@drawable/ic_launcher_background"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="-15dp"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/favImageB"
                        android:src="@drawable/ic_launcher_background"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="-15dp"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/favImageBR"
                        android:src="@drawable/ic_launcher_background"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="-15dp"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/favImageR"
                        android:src="@drawable/ic_launcher_background"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="6dp"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/favImageL"
                        android:src="@drawable/ic_launcher_background"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="-15dp"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/favImageBB"
                        android:src="@drawable/ic_launcher_background"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="-15dp"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/favImageRR"
                        android:src="@drawable/ic_launcher_background"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="-15dp"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/favImageBRR"
                        android:src="@drawable/ic_launcher_background"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>